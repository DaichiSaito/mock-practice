<div style="margin: 0 auto; width: 800px;">

  <%= form_with method: :get do |f| %>
    <%= f.search_field :username, placeholder: 'ユーザー名' %>
    <%= f.submit '検索' %>
  <% end %>

  <table>
    <tr>
      <td>id</td>
      <td>name</td>
      <td>html_url</td>
    </tr>
    <% @repos.each do |repo| %>
      <tr>
        <td><%= repo.id %></td>
        <td><%= repo.name %></td>
        <td><%= link_to repo.html_url, repo.html_url %></td>
      </tr>
    <% end %>
  </table>
</div>
